{
  "compilerOptions": {
    "target": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "src",
    "packages"
  ],
  "exclude": [
    "dev/"
  ]
}
